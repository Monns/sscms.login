@page
@{ Layout = "_Layout"; }

<div style="height: 10px;"></div>

<el-alert type="info">
  请进入微信开放平台（https://open.weixin.qq.com/） - 管理中心 - 网站应用 - 查看 获取AppID及App Secret
</el-alert>

<div style="height: 10px;"></div>

<el-form ref="form" :model="form" size="small" status-icon label-width="260px">

  <el-form-item label="是否启用微信登录">
    <el-radio v-model="form.isWeixin" :label="true">启用</el-radio>
    <el-radio v-model="form.isWeixin" :label="false">不启用</el-radio>
  </el-form-item>
  <el-form-item v-if="form.isWeixin" label="AppID" prop="weixinAppId" :rules="{ required: true, message: '请输入AppID' }">
    <el-input v-model="form.weixinAppId"></el-input>
  </el-form-item>
  <el-form-item v-if="form.isWeixin" label="App Secret" prop="weixinAppSecret" :rules="{ required: true, message: '请输入App Secret' }">
    <el-input v-model="form.weixinAppSecret"></el-input>
  </el-form-item>

</el-form>

<el-divider></el-divider>
<div style="height: 10px"></div>

<el-row>
  <el-col :span="24" align="center">
    <el-button type="primary" v-on:click="btnSubmitClick" size="small">保 存</el-button>
    <el-button v-if="url" type="primary" v-on:click="btnTestClick" size="small">测 试</el-button>
  </el-col>
</el-row>

@section Scripts{
<script src="index.js" type="text/javascript"></script>
}
